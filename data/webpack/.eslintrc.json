{
  "extends": "humanmade",
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "forOf": true,
      "jsx": true,
      "es6": true
    }
  },
  "rules": {
    "comma-dangle": [ "error", "never" ],
    "key-spacing": [ "error", { "mode": "minimum" }],
    "no-continue": 0,
    "object-curly-newline": 0,
    "space-in-parens": [ "error", "always", { "exceptions": ["{}"] } ],
    "semi": [ "error", "always" ]
  },
  "settings": {
    "import/extensions": ["js", "jsx"],
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.babel.js"
      }
    }
  }
}
